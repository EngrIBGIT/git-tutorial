CREATE TABLE attendance (
            
			date date, 
	        student_id varchar,
	        Location varchar,
	        number_of_classes_attended int
); 



CREATE TABLE parties( 
    "political party" varchar(200),
	"number of registered voters" int
);


name varchar(10)



SELECT "political party", "number of registered voters"
FROM PARTIES;


SELECT DATE,
     STUDENT_ID,
	 LOCATION,
	 NUMBER_OF_CLASSES_ATTENDED
	 FROM ATTENDANCE; 
	 


select * 
from parties;


